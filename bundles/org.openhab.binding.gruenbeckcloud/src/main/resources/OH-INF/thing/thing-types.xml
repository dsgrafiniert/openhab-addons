		<config-description>
			<parameter name="serialNumber" type="text" required="true">
				<label>Softener Serial</label>
				<description>Serial number of the softener</description>
			</parameter>

			<parameter name="id" type="text" required="true">
				<label>Softener ID</label>
				<description>ID of the softener</description>
			</parameter>

			<parameter name="series" type="text" required="true">
