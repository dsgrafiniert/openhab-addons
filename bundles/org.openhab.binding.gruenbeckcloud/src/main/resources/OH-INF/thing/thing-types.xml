	<bridge-type id="bridge">

		<label>Grünbeck Cloud Bridge</label>
		<description>Bridge representing the Grünbeck Cloud Account</description>

		<properties>
			<property name="user"/>
		</properties>

		<representation-property>username</representation-property>

		<config-description>			
			<parameter name="password" type="text">
				<required>true</required>
				<label>Password</label>
				<description>This is the password required to log in to Grünbeck Cloud.</description>
			</parameter>
			<parameter name="refreshPeriod" type="integer" min="1" max="60">
				<required>true</required>
				<default>10</default>
				<label>Connect Refresh Period (seconds)</label>
				<description>This is the frequency of the polling requests to the Grünbeck Cloud API. There are limits to the
					number of requests
					that can be sent to the API. The more often you poll, the better status updates - at the risk
					of running out of
					your request quota.</description>
			</parameter>
			<parameter name="username" type="text">
				<required>true</required>
				<label>User Name</label>
				<description>This is the user name required to log in to Grünbeck Cloud</description>
			</parameter>
		</config-description>
	</bridge-type>

